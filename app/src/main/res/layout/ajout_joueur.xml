<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:scrollbarThumbHorizontal="@color/black"
    android:scrollbarThumbVertical="@color/black"
    tools:context="com.example.accueil"
    android:background="#000000">

    <TextView
        android:id="@+id/textView"
        android:layout_width="401dp"
        android:layout_height="86dp"
        android:layout_gravity="center_vertical|right"
        android:gravity="center"
        android:padding="10dp"
        android:text="Liste des noms des joueurs"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.133"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="29dp"
        android:background="#6A79BF"
        android:text="OK"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="117dp"
        tools:layout_editor_absoluteY="704dp" />

    <EditText
        android:id="@+id/textView1"
        android:layout_width="378dp"
        android:layout_height="74dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:background="#FFFF"
        android:gravity="center"
        android:scrollbarThumbHorizontal="@color/black"
        android:scrollbarThumbVertical="@color/black"
        android:shadowColor="#FBFBFB"
        android:text=""
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/textView2"
        android:layout_width="378dp"
        android:layout_height="74dp"
        android:layout_below="@id/textView1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:scrollbarThumbHorizontal="@color/black"
        android:scrollbarThumbVertical="@color/black"
        android:shadowColor="#0E0E0E"
        android:text=""
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp"
        android:background="#FFFF"/>

    <EditText
        android:id="@+id/textView3"
        android:layout_width="369dp"
        android:layout_height="82dp"
        android:layout_below="@id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:scrollbarThumbHorizontal="@color/black"
        android:scrollbarThumbVertical="@color/black"
        android:shadowColor="#0B0B0B"
        android:text=""
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp"
        android:background="#FFFF"/>

    <EditText
        android:id="@+id/textView4"
        android:layout_width="369dp"
        android:layout_height="82dp"
        android:layout_below="@id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:scrollbarThumbHorizontal="@color/black"
        android:scrollbarThumbVertical="@color/black"
        android:shadowColor="#0E0E0E"
        android:text=""
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp"
        android:background="#FFFF"/>

    <EditText
        android:id="@+id/textView5"
        android:layout_width="369dp"
        android:layout_height="82dp"
        android:layout_below="@id/textView4"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="18dp"
        android:background="#FFFF"
        android:gravity="center"
        android:scrollbarThumbHorizontal="@color/black"
        android:scrollbarThumbVertical="@color/black"
        android:shadowColor="#2B2B2B"
        android:text=""
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />


</RelativeLayout>